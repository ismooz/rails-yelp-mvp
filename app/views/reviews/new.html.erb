<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h1>Add a review for restaurant "<%= @restaurant.name %>"</h1>
      <%= simple_form_for([@restaurant, @review]) do |r| %>
      <%= r.input :content %>
      <%= r.input :rating %>
      <%= r.submit class: "btn btn-primary  float-right" %>
      <%= link_to '<i class="fas fa-history"></i> - Back to list'.html_safe, restaurants_path, class:  "btn btn-primary float-left" %>
      <% end %>
      <br>
    </div>
  </div>
</div>
