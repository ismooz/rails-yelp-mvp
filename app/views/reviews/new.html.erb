<div class="container">
 <h1>Add a review for <%= @restaurant %></h1>
  <div>
    <%= simple_form_for([@restaurant, @review]) do |r| %>
    <%= r.input :content %>
    <%= r.input :rating %>
    <%= r.submit class: "btn btn-primary" %>
    <% end %>
  </div>
  <br>
  <%= link_to '<i class="fas fa-history"></i> - Back to list'.html_safe, restaurants_path, class: "btn btn-primary" %>
  <%= link_to '<i class="fas fa-plus"></i> - Add a review'.html_safe, new_review_path(@restaurant), class: "btn btn-primary" %>
</div>
